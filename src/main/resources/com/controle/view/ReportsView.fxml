<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.ReportsController" styleClass="root">

    <padding>
        <Insets top="0" right="50" bottom="20" left="50"/>
    </padding>

    <top>
        <VBox alignment="CENTER">
            <children>
                <Label fx:id="fullScreenHintLabel" styleClass="full-screen-hint-label" text="" visible="false" />
                <Label text="RELATÓRIOS FINANCEIROS" styleClass="label-title" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="15"> <Label text="Filtro de Período" styleClass="label-section-header" />
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 10 0;">
                <Label text="De:" />
                <DatePicker fx:id="startDatePicker" styleClass="date-picker" prefHeight="40"/>
                <Label fx:id="startDateErrorLabel" styleClass="error-message-label"/>

                <Label text="Até:" style="-fx-padding: 0 0 0 10;"/>
                <DatePicker fx:id="endDatePicker" styleClass="date-picker" prefHeight="40"/>
                <Label fx:id="endDateErrorLabel" styleClass="error-message-label"/>

                <Button onAction="#handleGenerateReport" text="GERAR RELATÓRIO" styleClass="button, button-green" prefHeight="40" HBox.hgrow="NEVER" style="-fx-margin-left: 20;"/>
            </HBox>

            <HBox spacing="25" alignment="CENTER_LEFT" style="-fx-background-color: #f8f8f8; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Balanço do Período:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label fx:id="totalIncomeLabel" text="Receitas: R$ 0.00" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                <Label fx:id="totalExpensesLabel" text="Despesas: R$ 0.00" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
                <Label fx:id="totalBalanceLabel" text="Balanço: R$ 0.00" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            </HBox>

            <Label text="Despesas por Categoria" styleClass="label-section-header" />
            <GridPane hgap="20" vgap="10" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="60"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40"/>
                </columnConstraints>

                <TableView fx:id="categoryExpensesTable" styleClass="table-view" VBox.vgrow="ALWAYS" prefHeight="350" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <columns>
                        <TableColumn fx:id="colCategoryName" prefWidth="250.0" text="Categoria" />
                        <TableColumn fx:id="colCategoryAmount" prefWidth="150.0" text="Valor Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <PieChart fx:id="categoryPieChart" title="Distribuição de Despesas" prefHeight="350" VBox.vgrow="ALWAYS" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding> <Insets top="20" bottom="20" /> </padding>
            <Button onAction="#handleGoBack" text="VOLTAR AO MENU PRINCIPAL" styleClass="button, button-green">
                <graphic> <Region styleClass="form-icon, icon-home" /> </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>