<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.ExtratoController" styleClass="root" prefWidth="600" prefHeight="500">
    <top>
        <VBox alignment="CENTER" style="-fx-padding: 10 20 20 20;">
            <Label text="EXTRATO DA CONTA" styleClass="label-title" style="-fx-padding: 10 0 10 0;"/>
            <Label fx:id="contaNomeLabel" text="[Nome da Conta]" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 0 20 0 20;">

            <HBox spacing="25" alignment="CENTER" style="-fx-background-color: #f8f8f8; -fx-padding: 15; -fx-background-radius: 8;">
                <VBox alignment="CENTER">
                    <Label text="Saldo Inicial" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
                    <Label fx:id="saldoInicialLabel" text="R$ 0,00" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Total de Entradas" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
                    <Label fx:id="totalEntradasLabel" text="R$ 0,00" styleClass="balance-label-positive" style="-fx-font-size: 16px;"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Total de Saídas" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
                    <Label fx:id="totalSaidasLabel" text="R$ 0,00" styleClass="balance-label-negative" style="-fx-font-size: 16px;"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Saldo Atual" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
                    <Label fx:id="saldoAtualLabel" text="R$ 0,00" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <Label text="Transações da Conta" styleClass="label-section-header"/>
            <TableView fx:id="transacoesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colData" prefWidth="100.0" text="Data" />
                    <TableColumn fx:id="colDescricao" prefWidth="300.0" text="Descrição" />
                    <TableColumn fx:id="colValor" prefWidth="150.0" text="Valor" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" />
            </padding>
            <Button onAction="#handleFechar" text="FECHAR" styleClass="button">
                <graphic>
                    <Region styleClass="form-icon, icon-exit" />
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>