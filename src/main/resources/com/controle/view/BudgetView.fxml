<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.BudgetController" styleClass="root">
    <top>
        <Label fx:id="fullScreenHintLabel" styleClass="full-screen-hint-label" text="" visible="false" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <center>
        <VBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
            <Label styleClass="label-title" text="Gerenciamento de Orçamentos" />

            <GridPane hgap="10.0" vgap="5">
                <children>
                    <Label text="Categoria (Despesa):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="categoryComboBox" promptText="Selecione a categoria" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="combo-box" prefWidth="200.0"/>
                    <Label fx:id="categoryErrorLabel" styleClass="error-message-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Limite (R$):" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="valorLimiteField" promptText="Ex: 500.00" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="text-field" prefWidth="150.0"/>
                    <Label fx:id="valorLimiteErrorLabel" styleClass="error-message-label" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Mês:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="mesComboBox" promptText="Mês" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="combo-box" prefWidth="200.0"/>
                    <Label fx:id="mesErrorLabel" styleClass="error-message-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Ano:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <ComboBox fx:id="anoComboBox" promptText="Ano" GridPane.columnIndex="3" GridPane.rowIndex="2" styleClass="combo-box" prefWidth="150.0"/>
                    <Label fx:id="anoErrorLabel" styleClass="error-message-label" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                </children>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="addBudgetButton" text="Adicionar Orçamento" onAction="#handleAddOrUpdateBudget" styleClass="button"/>
                <Button fx:id="updateBudgetButton" text="Atualizar Orçamento" onAction="#handleAddOrUpdateBudget" disable="true" styleClass="button"/>
                <Button fx:id="deleteBudgetButton" text="Excluir Orçamento" onAction="#handleDeleteBudget" disable="true" styleClass="button"/>
                <Button fx:id="newBudgetButton" text="Novo" onAction="#handleNewBudget" styleClass="button"/>
            </HBox>

            <Label styleClass="label-section-header" text="Lista de Orçamentos" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Filtrar por Mês:" />
                <ComboBox fx:id="filtroMesComboBox" promptText="Todos os Meses" styleClass="combo-box"/>
                <Label text="Filtrar por Ano:" />
                <ComboBox fx:id="filtroAnoComboBox" promptText="Todos os Anos" styleClass="combo-box"/>
            </HBox>

            <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colCategoria" prefWidth="200.0" text="Categoria" />
                    <TableColumn fx:id="colValorLimite" prefWidth="150.0" text="Valor Limite" />
                    <TableColumn fx:id="colMes" prefWidth="100.0" text="Mês" />
                    <TableColumn fx:id="colAno" prefWidth="100.0" text="Ano" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <Button onAction="#handleGoBack" text="Voltar para o Menu Principal" styleClass="button" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>